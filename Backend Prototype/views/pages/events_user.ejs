<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
        <title>Sessions</title>
        <link rel="stylesheet" href="/css/events_page.css">
        <link rel="stylesheet" href="/css/nav.css">

</head>

<main class="register-container">
    <div class="register-form-row">

        <%- include('../partials/nav_user') %>
            <% events.forEach(function (event) { %>
                <div class="single-event-container container">
                    <div class="row container-header">
                        <div class="col">
                            <h2>
                                <%= event.session_name %>
                            </h2>
                        </div>
                        <div class="col">
                            <h2>
                                <%= event.date_of_event %>
                            </h2>
                        </div>
                    </div>
                    <div class="row time-row" style="padding: 15px;">
                        <div class="col">

                            <h2>
                                <%= event.session_start_time+" "+event.session_end_time %></h2>
                            
                        </div>
                        <div class=" col">

                                    <form action="/addtoevent" method="POST">
                                        <input type="text" name="sessionname" value="<%= event.session_name %>"
                                            style="display: none">
                                        <button name="Attend Session" class="addmanual-button" value="Attend Session"
                                            type="submit">Attend
                                            Session</button>
                                        <a href="/scan_qr"><button class="qrcode-button" type="button">Scan QR
                                                Code</button></a>
                                    </form>
                                    <!-- <button class="attend-button" type="button"><h5>Attend Session</h5></button> -->
                        </div>
                    </div>

                </div>

                <% }); %>


    </div>


</main>