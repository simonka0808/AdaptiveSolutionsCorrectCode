<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
    <title>Profile</title>
    <link rel="stylesheet" href="/css/profile.css" />
    <link rel="stylesheet" href="/css/nav.css">

  </head>

  <div class="container-navbar"><%- include('../partials/nav_user') %></div>

  <body>
    <div class="profile-page-row">
      <div id="registerForm">
        <div class="register-title-wrapper row">
          <div class="col-md-6">
            <h1>My Profile</h1>
          </div>
          <div class="col-md-6">
            <button
              id="logoutBtn"
              type="button"
              onclick="window.location.href='login.html'"
            >
              Log Out
            </button>
          </div>
          <div class="col-lg-12">
            <p>Update your details below</p>
          </div>
          <hr />
        </div>
        <form id="register" action="/updateprofile" method="POST">
          <div class="row credentials-row">
            <div class="col-md-6">
              <label style="display: inherit"><b>Postcode:</b></label>
              <input
                type="text"
                placeholder="AB25 EJJ"
                name="postcode"
                value="<%= users[0].postcode %>"
              />
            </div>
            <div class="col-lg-12">
              <label style="display: inherit"><b>Email:</b></label>
              <input
                type="text"
                placeholder="example@email.columns"
                name="email"
                value="<%= users[0].email %>"
              />
            </div>
          </div>
          <p class="emergency-details-header">Emergency Contact</p>
          <div class="row credentials-row">
            <div class="col-md-6">
              <label style="display: inherit"><b>Name:</b></label>
              <input
                type="text"
                placeholder="Enter Name"
                name="emergency_name"
                value="<%= users[0].emergency.name %>"
                required
              />
            </div>
            <div class="col-md-6">
              <label style="display: inherit"><b>Phone Number:</b></label>
              <input
                type="text"
                placeholder="Enter phone number"
                name="emergency_phone"
                value="<%= users[0].emergency.phonenumber %>"
                required
              />
            </div>
          </div>
          <hr />
            <div class="row credentials-row">
                <div class="col-md-6">
                    <label style="display: inherit"><b>Current Password:</b></label>
                    <input type="password" name="pass" required />
                </div>
                <div class="col-md-6">
                    <label style="display: inherit"><b>New Password:</b></label>
                    <input type="password" name="passConfirm" />
                </div>
                <div class="col-lg-12">
                    <label style="display: inherit"><b>Confirm New Password:</b></label>
                    <input type="password" name="passConfirm" />
                </div>
            </div>

            <div class="row password-row">
            <div class="col-lg-12">
                <label style="display: inherit"
                ><input type="checkbox" checked="checked" name="remember" />
                Remember me
                </label>
            </div>
            <div class="col-md-6">
                <button
                id="deleteAccountBtn"
                onclick="window.location.href='login.html'"
                >
                Delete Account
                </button>
            </div>
            <div class="col-md-6">
                <button id="saveChangesBtn" type="submit">Save Changes</button>
            </div>
        </form>
      </div>
    </div>
  </body>
</html>
