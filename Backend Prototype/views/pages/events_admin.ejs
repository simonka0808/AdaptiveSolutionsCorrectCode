<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
    <title>Sessions</title>
    <link rel="stylesheet" href="/css/events_page_admin.css">
    <link rel="stylesheet" href="/css/nav.css">
    
</head>


<div class="container-navbar">
    <%- include('../partials/nav_admin') %>
</div>



<body>

    <div class="maincontent">

            <% events.forEach(function (event) { %>
            <div class="single-event-container container">
                <div class="container-header row">
                    <div class="col-xs-6 col-sm-6">
                        <h2 class="session_name"><%= event.session_name %></h2>
                    </div>
                    <div class="col-xs-6 col-sm-6">
                        <h2><%= event.date_of_event %></h2>
                    </div>
                </div>
                <div class="row" style="padding: 15px;">
                    <div class="col">
                        <h1><%= event.location %></h1>
                    </div>
                    <div class="col">
                        <a href="/userslist?email=<%= event.user_signed_up %>.toArray()"><button class="show-participants-button" type="button">Show Participants</button></a>
                        <a href="/addusersmanual?event=<%= event.session_name %>" ><button class="addmanual-button" type="button">Add User</button></a>
                    </div>
                </div>
                <div class="row" style="padding: 15px;">
                    <div class="col col-start-time">
                        <h2><%= event.session_start_time+" "+event.session_end_time %></h2>
                    </div>
                    <div class="col">
                        <a href="/edit_event?event=<%= event.session_name %>" ><button class="editSession-button" type="button">Edit Session</button></a>
                        <a href="/scan_qr"><button class="qrcode-button" type="button">QR CODE</button></a>
                    </div>
                </div>
            </div>



            <% }); %>







<div class="neweventcontainer">
<div class="container">
    <div class="row">
      <div class="col-10">
        
      </div>
      <div class="col-2">
        <img src="images/andnewuser.png" alt="and new user button" style="max-width: 80%;height: auto;  ">
      </div>
  </div>
</div>
<script src="/public/js/events_admin.js"></script>
</body>