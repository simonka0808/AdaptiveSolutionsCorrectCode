<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/users.css" />
    <title>User Search</title>
  </head>
  <body>
    <div class="container-navbar"><%- include('../partials/nav_admin') %></div>

    <!-- Search bar for finding user details at top of page -->
    <div class="searchBar">
      <form>
        <input
          type="text"
          class="form-control"
          id="searchInput"
          placeholder="Enter a name..."
        />
        <button
          type="submit"
          class="btn btn-light"
          id="searchButton"
          onClick="searchUsers()"
        >
          Search
        </button>
      </form>
    </div>

    <!-- Blocks containing contact details for searched users -->
